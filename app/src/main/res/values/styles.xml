<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="ListView" parent="AppTheme">
    <item name="android:layout_marginRight">@dimen/spacing_small_8</item>
    <item name="android:layout_marginLeft">@dimen/spacing_small_8</item>
    <item name="android:layout_marginTop">@dimen/spacing_small_8</item>

  </style>

  <style name="ListView.Item" parent="ListView">
    <item name="android:textColor">#000000</item>
    <item name="android:textSize">16sp</item>
    <item name="android:layout_weight">1</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="RecycleView" parent="AppTheme">
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">@android:color/black</item>
  </style>

  <style name="RecycleView.Items" parent="RecycleView">
    <item name="android:textStyle">italic</item>
    <item name="android:textSize">16sp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:textColor">@android:color/darker_gray</item>
  </style>

  <style name="RecycleView.Id" parent="RecycleView">
    <item name="android:textStyle">bold</item>
  </style>


</resources>
